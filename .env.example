# Database Configuration
DATABASE_URL=sqlite:///./podcastpile.db

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Worker Authentication (optional)
# Set to true to require workers to authenticate with a password
WORKER_AUTH_ENABLED=false
# Password that workers must provide in X-Worker-Password header
# WORKER_PASSWORD=your-secure-worker-password-here

# Admin Dashboard Authentication (optional)
# Set to true to require login for admin dashboard and charts
ADMIN_AUTH_ENABLED=false
# Username for admin dashboard login
ADMIN_USERNAME=admin
# Password for admin dashboard login
# ADMIN_PASSWORD=your-secure-admin-password-here

# Job Settings
JOB_TIMEOUT_HOURS=2
